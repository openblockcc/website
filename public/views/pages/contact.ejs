        <!--================Contact Area =================-->
        <section class="contact_area section_gap">
            <div class="container">
                <div id="mapBox" class="mapBox"></div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="contact_info">
                            <div class="info_item">
                                <i class="lnr lnr-home"></i>
                                <h6>深圳 Shenzhen, 中国 China</h6>
                                <p>沃特思科技园</p>
                            </div>
                            <div class="info_item">
                                <i class="lnr lnr-envelope"></i>
                                <h6><a href="mailto:business@openblock.cc">business@openblock.cc</a></h6>
                                <p>随时向我们发送您的询问！<br>Send us your query anytime!</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <form class="row contact_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="name" name="name" placeholder="输入您的名字 Enter your name">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="contact" name="contact" placeholder="输入您的联系方式 Enter contact information">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="subject" name="subject" placeholder="输入标题 Enter Subject">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" name="message" id="message" rows="1" placeholder="输入信息 Enter Message"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 text-right">
                                <button type="submit" value="submit" class="primary_btn"><span>发送信息 Send Message</span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!--================Contact Area =================-->
    
    <footer class="footer_area">
        <%- include('../partials/footer'); %>
    </footer>
        
        <!--================Contact Success and Error message Area =================-->
